<div class="form-container flex flex-col items-start w-[100%] m-x-auto space-y-2 p-4">
  <h1 class="font-semibold text-3xl mb-8">New Comment</h1>
    <%= form_with model: @comment, url: user_post_comments_url, class: "space-y-4" do |form| %>
      <% if @comment.errors.any? %>
        <div class="bg-red-100 px-4 py-4 border-2 border-red-600 rounded-md">
          <% @comment.errors.full_messages.each do |message| %>
            <p class="text-red-700 font-medium"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="text flex space-x-1">
        <%= form.label :text %>:
        <%= form.text_area :text, class: "md:w-96 h-36 rounded-md" %>
      </div>
      <%= form.submit "Add Comment", class: "ml-10 px-4 py-2 bg-gray-200 font-medium hover:bg-orange-800 hover:text-white hover:cursor-pointer active:scale-95 rounded-md" %>
    <% end %>
    <%= link_to "Cancel", user_post_path(@comment.author_id, @comment.post_id), class: "ml-10 px-4 py-2 bg-gray-200 font-medium hover:bg-orange-800 hover:text-white hover:cursor-pointer active:scale-95 rounded-md" %>
</div>
