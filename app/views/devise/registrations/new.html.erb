<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>

  <div class="field my-2">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field my-2">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (min: 6 chars)" %>
  </div>

  <div class="field my-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>

  <div class="actions mb-20">
    <%= f.submit "Sign up", class: "mt-4 px-4 py-2 bg-gray-200 font-medium hover:bg-orange-800 hover:text-white hover:cursor-pointer active:scale-95 rounded-md w-[100%]" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
